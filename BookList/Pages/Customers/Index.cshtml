@page
@model BookList.Pages.Customers.IndexModel
@{
}


<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class=" test-info"> Customer list </h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white"> Create New Customer</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Customers.Count() > 0)
            {
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                <label asp-for="Customers.FirstOrDefault().Name"></label>
            </th>
            <th>
                <label asp-for="Customers.FirstOrDefault().Address"></label>
            </th>
            
            <th>

            </th>
        </tr>
        @foreach (var item in Model.Customers)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.Address)
        </td>
        <td>
            <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure want to delete ?')" class="btn btn-danger btn-sm">Delete</button>
            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
        </td>
    </tr>}

    </table> }
    else
    {
    <p>No Books available.</p>            
    }
        </form>
    </div>

</div>

